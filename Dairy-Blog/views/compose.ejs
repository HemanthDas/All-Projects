<%- include("header.ejs")%>
<h1>Compose</h1>
<form action="/compose" method="post">
  <div class="box">
    <label for="title">Title</label>
    <input type="text" name="title" class="form-title" required />
    <label for="post">Post</label>
    <textarea
      name="post"
      class="form-title"
      rows="7"
      cols="50"
      required
    ></textarea>
  </div>
  <button type="submit">Post</button>
</form>
