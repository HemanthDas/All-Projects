<%- include("header.ejs") %>
<div class="box" id="heading">
  <h1><%= Title %></h1>
</div>
<div class="box">
  <% list.forEach((item) => { %>

  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        onchange="this.form.submit()"
        value="<%=item._id%>"
        name="checkbox"
      />
      <p><%= item.name %></p>
      <input type="hidden" name="itemName" value="<%= Title %>" />
    </div>
  </form>

  <% }) %>
  <form class="item" method="post" action="/">
    <input
      type="text"
      placeholder="New Item"
      name="newItem"
      autocomplete="off"
    />
    <button type="submit" name="button" value="<%= Title %>">+</button>
  </form>
</div>
<%- include("footer.ejs") %>
